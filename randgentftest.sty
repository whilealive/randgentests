\newif\ifPrintSolutions
\newif\ifPrintFilePaths

\pgfkeys
{%
  randgentftest/.is family, /randgentftest,
  default/.style={solutions=true, file paths=false},
  solutions/.is   if=PrintSolutions,
  file paths/.is  if=PrintFilePaths,
}%

% args: #1: options (optional), #2: number of true statements, #3: number of false statements
% options:  solutions=false   (default: true)
%           print paths=true  (default: false)
\newcommand*{\CreateStatementTest}[3][]
{%
  \pgfkeys{/randgentftest, default, #1}%
  \directlua{%
    require('randgentftest.lua')
    \ifPrintSolutions  
      \ifPrintFilePaths
        createRandGenTest('\Collectionfolder', '\Topicfolders', '\tFolder', '\fFolder', #2, #3, '\Filterlist', true, true)
      \else
        createRandGenTest('\Collectionfolder', '\Topicfolders', '\tFolder', '\fFolder', #2, #3, '\Filterlist', true, false)
      \fi
    \else  % no solutions
      createRandGenTest('\Collectionfolder', '\Topicfolders', '\tFolder', '\fFolder', #2, #3, '\Filterlist')
    \fi
  }%
}%

% Wrapper macro for printing all statements in parent folder in one single pdf
\newcommand*{\PrintEntireLibrary}[1][]
{%
  \pgfkeys{/randgentftest, default, #1}%
  \directlua{%
    require('randgentftest.lua')
    \ifPrintFilePaths  
      printAll('\Collectionfolder', '\Filterlist', true)
    \else
      printAll('\Collectionfolder', '\Filterlist', false)
    \fi
  }%
}%

